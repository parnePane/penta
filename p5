function setup() {
  createCanvas(1280, 800);
}

function draw() {
  translate(1280/2,800/2);
  background(0);
  drawRecursion(0,0,395);
}

function drawRecursion(x,y,d) {
  noFill(0);
  stroke(255);
  ellipse(x,y,d);
  if ( d > 4 ) {
		drawRecursion (x + d*0.5,y,d*0.5);
	  drawRecursion (x - d*0.5,y,d*0.5);
  	drawRecursion (x,y + d*0.5,d*0.5);
    drawRecursion (x - d*0.5,y,d*0.5);
  }
}


  
